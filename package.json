{
  "name": "stratiformis",
  "version": "0.0.1",
  "description": "Simple text/code editor.",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "start:dev": "react-scripts start",
    "build:win": "react-scripts build && electron-builder --win",
    "build:linux": "react-scripts build && electron-builder --linux",
    "build:mac": "react-scripts build && electron-builder --mac"
  },
  "author": "astroxii",
  "license": "MIT",
  "build": {
    "appId": "astroxii.Stratiformis",
    "productName": "Stratiformis",
    "extends": null,
    "extraFiles": [
      {"from": "build", "to": "public", "filter": ["**/*"]}, {"from": "settings.json", "to": "settings.json"}
    ],
    "win": {
      "publisherName": "astroxii",
      "icon": "/public/images/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
